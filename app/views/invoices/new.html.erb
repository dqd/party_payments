<% page_title "Vložení nové přijaté faktury" %>

<%= simple_form_for(@invoice, html: { class: 'form-horizontal' }) do |f| %>

  <%= f.error_notification %>
  <%= f.input :document%>
  <%= f.input :amount %>
  <%= f.input :organization_id, collection: @organizations %>
  <%= f.input :description %>
  <%= f.button :submit, "Uložit fakturu", class: "btn-primary pull-right" %>

<% end %>

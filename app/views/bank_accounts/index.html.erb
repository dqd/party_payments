<h1>Listing bank_accounts</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Account type</th>
      <th>Account number</th>
      <th>Bank code</th>
      <th>Balance</th>
      <th>Token</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @bank_accounts.each do |bank_account| %>
      <tr>
        <td><%= bank_account.name %></td>
        <td><%= bank_account.description %></td>
        <td><%= bank_account.account_type %></td>
        <td><%= bank_account.account_number %></td>
        <td><%= bank_account.bank_code %></td>
        <td><%= bank_account.balance %></td>
        <td><%= bank_account.token %></td>
        <td><%= link_to 'Show', bank_account %></td>
        <td><%= link_to 'Edit', edit_bank_account_path(bank_account) %></td>
        <td><%= link_to 'Destroy', bank_account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bank account', new_bank_account_path %>

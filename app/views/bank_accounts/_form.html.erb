<%= simple_form_for(@bank_account, html: { class: 'form-horizontal' }) do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :account_type, collection: BankAccount.account_types %>
  <%= f.input :account_number %>
  <%= f.input :bank_code %>
  <%= f.button :submit, class: "btn-primary pull-right" %>
<% end %>
